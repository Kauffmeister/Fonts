/* The following rows change the fonts per style */
/* Paragraphs and main body */
.user-css,
.user-css p,
.user-css-extended,
.user-css-extended p {
    font-family: Bookman;
}

/* Added indent for paragraphs */
.user-css p {
    text-indent: 1em;
}

/* Align and change links */
.user-css a,
.user-css a:focus {
    color: #58170D;
    font-family: Bookman;
}
.user-css a:hover {
    text-decoration: underline;
    color: #962626;
}

