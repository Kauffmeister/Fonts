    text-transform: none;
    line-height: normal;
}

/* Following is the layout of the tables */
/* Main table layout: explains that no borders are used, the table will allocate width of columns by itself */
.user-css .table{
   border-style: none;
   background: transparent !important;
   table-layout: auto;
   width: 100%;
   white-space: pre-wrap;

/* Table td is cells, this area explains that the background in transparent and the ScalyRegular font is used throughout. Word-break is off, thus no words are hyphenated or cut off */
}
.user-css .table td{
   background: transparent !important;
   font-family: ScalyRegular;
   font-size: 0.9em;
   word-break: keep-all;
}

/* Table th is header. Explains that background is transparent and a bold font is used */
.user-css table th,
.user-css .table-striped th{
   background: transparent !important;
   font-family: ScalyRegular;
   font-size: 0.9em;
    text-align: left;
    vertical-align: middle;
   color: #000000;
   border-style: none;
}

/* Even rows. Explains that a green color will be used */
.user-css table tr,
.user-css .table tr{
   background-color: #DAE6C2   
 
/* Odd columns, explains that transparent background is used. */ 
}
.user-css table tr:nth-child( odd ),
.user-css .table tr:nth-child( odd ) { 
   background: transparent !important;

}
