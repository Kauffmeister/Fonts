/* The following rows change the fonts per style */
/* Paragraphs and main body */
.user-css,
.user-css p,
.user-css-extended,
.user-css-extended p {
    font-family: Bookman;
    font-size: 1em;
    line-height: normal;
}

/* Added indent for paragraphs */
.user-css p {
    text-indent: 1em;
}

/* Align and change links */
.user-css a,
.user-css a:focus {
    color: #58170D;
    font-family: Bookman;
}
.user-css a:hover {
    text-decoration: underline;
    color: #962626;
}

/* Article Header */
.user-css .article-title h1 {
    font-family: MrEaves;
    font-weight: normal;
    font-size: 3.5em;
    padding-top: 15px;
    padding-left: 0;
    line-height: normal;
    margin-top: 20px;
    margin-bottom: 5px;
    letter-spacing: -1px;
    color: #58170D;
}



/* Confusingly header 1 */
.user-css h2 {
    font-family: MrEaves;
    font-weight: normal;
    font-size: 2.5em;
    text-transform: none;
    line-height: normal;
    color: #58170D;
    border-bottom-style: none;
}

/* Header 2 */
